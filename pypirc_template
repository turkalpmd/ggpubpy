# PyPI configuration file template
# Copy this file to ~/.pypirc (Linux/Mac) or %USERPROFILE%\.pypirc (Windows)
# Replace YOUR_USERNAME and YOUR_*_TOKEN with your actual credentials

[distutils]
index-servers =
    pypi
    testpypi

[pypi]
username = YOUR_USERNAME
password = YOUR_PYPI_TOKEN

[testpypi]
repository = https://test.pypi.org/legacy/
username = YOUR_USERNAME
password = YOUR_TESTPYPI_TOKEN

# How to get API tokens:
# 1. Go to https://pypi.org/manage/account/ and create an API token
# 2. Go to https://test.pypi.org/manage/account/ and create a test API token  
# 3. Replace YOUR_USERNAME with your PyPI username
# 4. Replace YOUR_*_TOKEN with your actual API tokens
# 5. Copy this file to ~/.pypirc (Linux/Mac) or %USERPROFILE%\.pypirc (Windows)

# Usage:
# twine upload dist/* --username __token__
# or configure this file and use: twine upload dist/*
