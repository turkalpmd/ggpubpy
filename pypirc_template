# PyPI configuration file template
# Copy this file to ~/.pypirc (Linux/Mac) or %USERPROFILE%\.pypirc (Windows)
# Replace YOUR_PYPI_TOKEN and YOUR_TESTPYPI_TOKEN with your actual API tokens

[distutils]
index-servers =
    pypi
    testpypi

[pypi]
username = __token__
password = YOUR_PYPI_TOKEN

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = YOUR_TESTPYPI_TOKEN

# How to get API tokens:
# 1. Go to https://pypi.org/manage/account/ and create an API token
# 2. Go to https://test.pypi.org/manage/account/ and create a test API token
# 3. Replace YOUR_PYPI_TOKEN and YOUR_TESTPYPI_TOKEN above
# 4. Copy this file to the correct location for your OS
